<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Checkouts.Cart">

    <ListView
        android:id="@+id/cart_items"
        android:layout_width="match_parent"
        android:layout_height="283dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.008">

    </ListView>

    <android.support.v7.widget.CardView
        android:id="@+id/cardView"
        android:layout_width="587dp"
        android:layout_height="178dp"
        android:layout_marginBottom="50dp"
        android:layout_marginEnd="48dp"
        android:layout_marginStart="48dp"
        android:padding="20dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.162"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/cart_items"
        app:layout_constraintVertical_bias="0.0">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:layout_marginTop="20dp"
            android:text="Please add items to the cart \nfrom the menu above if the cart is empty and if no \nitem is listed. You cannot checkout out an empty cart. \nIf you want to abandoned your shopping, \nempty the cart and no payments will be made. \nAnd many more useful texts to the user." />
    </android.support.v7.widget.CardView>

    <Button
        android:id="@+id/pay"
        android:layout_width="240dp"
        android:layout_height="89dp"
        android:layout_marginEnd="8dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="148dp"
        android:background="@drawable/btn_confirm_and_pay"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/cardView" />

</android.support.constraint.ConstraintLayout>